// ============================================
// Helper function to show alerts
// ============================================
function showAlert(message) {
  SpreadsheetApp.getUi().alert(message);
}

// ============================================
// Show instructions
// ============================================
function showInstructions() {
  const message = 
    'HOW TO USE:\n\n' +
    '1. Make sure your columns match CONFIG at top of script\n' +
    '2. To test: Click a participant row, then menu "Send to Selected Row"\n' +
    '3. To send all: Click menu "Send to All (Not Sent)"\n\n' +
    'TIPS:\n' +
    '- Emails sent will be marked in the last column\n' +
    '- Invalid emails will be marked as "Invalid Email"\n' +
    '- Script will skip rows already marked as sent\n\n' +
    'Need help? Check the script comments for column configuration.';
  
  showAlert(message);
}