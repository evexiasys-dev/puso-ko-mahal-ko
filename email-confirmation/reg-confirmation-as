/**
 * SIMPLIFIED EMAIL SENDER FOR HEART MONTH SCREENING
 * Copy this entire code to Google Apps Script
 * 
 * SETUP STEPS:
 * 1. Open your Google Sheet
 * 2. Click Extensions ‚Üí Apps Script
 * 3. Delete any existing code
 * 4. Paste this ENTIRE code
 * 5. Click Save (üíæ icon)
 * 6. Close Apps Script tab
 * 7. Refresh your Google Sheet
 * 8. You'll see a new menu "üìß Send Emails" at the top
 */

// ============================================
// STEP 1: Configure your column numbers
// ============================================
// Open your Google Sheet and count which column each field is in
// Column A = 1, Column B = 2, Column C = 3, etc.

const CONFIG = {
  NAME_COLUMN: 2,      // Column B - Name
  EMAIL_COLUMN: 6,     // Column F - Email
  CONTACT_COLUMN: 8,   // Column H - Contact
  PACKAGE_COLUMN: 9,   // Column I - Package
  
  START_ROW: 2,        // Which row to start from? (2 = skip header row)
  
  // Email settings
  SENDER_NAME: 'Evexia Wellness Center',
  SUBJECT: '‚úì Registration Confirmed - Heart Month Health Screening'
};

// ============================================
// MAIN FUNCTION - Creates the menu
// ============================================
function onOpen() {
  SpreadsheetApp.getUi()
    .createMenu('üìß Send Emails')
    .addItem('‚úâÔ∏è Send to Selected Row', 'sendToSelectedRow')
    .addItem('üìß Send to All (Not Sent)', 'sendToAll')
    .addSeparator()
    .addItem('‚öôÔ∏è Instructions', 'showInstructions')
    .addToUi();
}

// ============================================
// Send email to currently selected row
// ============================================
function sendToSelectedRow() {
  const sheet = SpreadsheetApp.getActiveSheet();
  const row = sheet.getActiveRange().getRow();
  
  if (row < CONFIG.START_ROW) {
    showAlert('Please select a participant row (not the header row)');
    return;
  }
  
  const data = sheet.getRange(row, 1, 1, sheet.getLastColumn()).getValues()[0];
  
  const participant = {
    name: data[CONFIG.NAME_COLUMN - 1],
    email: data[CONFIG.EMAIL_COLUMN - 1],
    contact: data[CONFIG.CONTACT_COLUMN - 1],
    package: data[CONFIG.PACKAGE_COLUMN - 1]
  };
  
  // Validate
  if (!participant.email) {
    showAlert('‚ùå No email found in this row!');
    return;
  }
  
  try {
    sendEmail(participant);
    showAlert('‚úÖ Email sent successfully to:\n' + participant.email);
    
    // Mark as sent in the last column
    const lastCol = sheet.getLastColumn() + 1;
    sheet.getRange(row, lastCol).setValue(new Date().toLocaleString());
    
  } catch (error) {
    showAlert('‚ùå Error sending email:\n' + error.message);
  }
}

// ============================================
// Send emails to all rows (skip if already sent)
// ============================================
function sendToAll() {
  const sheet = SpreadsheetApp.getActiveSheet();
  const lastRow = sheet.getLastRow();
  const lastCol = sheet.getLastColumn();
  
  // Add header for "Email Sent" column if needed
  if (sheet.getRange(1, lastCol + 1).getValue() === '') {
    sheet.getRange(1, lastCol + 1).setValue('Email Sent');
  }
  
  let sent = 0;
  let skipped = 0;
  let errors = 0;
  
  for (let row = CONFIG.START_ROW; row <= lastRow; row++) {
    const data = sheet.getRange(row, 1, 1, lastCol + 1).getValues()[0];
    
    // Skip if already sent
    if (data[lastCol]) {
      skipped++;
      continue;
    }
    
    const participant = {
      name: data[CONFIG.NAME_COLUMN - 1],
      email: data[CONFIG.EMAIL_COLUMN - 1],
      contact: data[CONFIG.CONTACT_COLUMN - 1],
      package: data[CONFIG.PACKAGE_COLUMN - 1]
    };
    
    // Skip if data is still loading from IMPORTRANGE or empty
    if (!participant.name || participant.name === '#REF!' || participant.name === 'Loading...') {
      skipped++;
      continue;
    }
    
    if (!participant.email || !participant.email.includes('@')) {
      errors++;
      sheet.getRange(row, lastCol + 1).setValue('Invalid Email');
      continue;
    }
    
    try {
      sendEmail(participant);
      sheet.getRange(row, lastCol + 1).setValue(new Date().toLocaleString());
      sent++;
      
      // Wait 1 second between emails to avoid rate limits
      Utilities.sleep(1000);
      
    } catch (error) {
      errors++;
      sheet.getRange(row, lastCol + 1).setValue('Error: ' + error.message);
    }
  }
  
  showAlert(
    'Campaign Complete!\n\n' +
    '‚úÖ Sent: ' + sent + '\n' +
    '‚è≠Ô∏è Skipped: ' + skipped + '\n' +
    '‚ùå Errors: ' + errors
  );
}

// ============================================
// The actual email sending function
// ============================================
function sendEmail(participant) {
  const htmlBody = createEmailHTML(participant);
  
  MailApp.sendEmail({
    to: participant.email,
    subject: CONFIG.SUBJECT,
    htmlBody: htmlBody,
    name: CONFIG.SENDER_NAME
  });
}

