// ============================================
// Helper function to show alerts
// ============================================
function showAlert(message) {
  SpreadsheetApp.getUi().alert(message);
}

// ============================================
// Show instructions
// ============================================
function showInstructions() {
  const message = 
    'HOW TO USE THIS EMAIL SYSTEM:\n\n' +
    'üìß REGISTRATION CONFIRMATION EMAILS:\n' +
    'Send these when people first register.\n' +
    '‚Ä¢ Test: Click a row ‚Üí Menu ‚Üí Registration Confirmation ‚Üí Send to Selected Row\n' +
    '‚Ä¢ Bulk: Menu ‚Üí Registration Confirmation ‚Üí Send to All (Not Sent)\n\n' +
    '‚è∞ FINAL REMINDER EMAILS (1 DAY BEFORE):\n' +
    'Send these the day before the event.\n' +
    '‚Ä¢ Test: Click a row ‚Üí Menu ‚Üí Final Reminder ‚Üí Send to Selected Row\n' +
    '‚Ä¢ Bulk: Menu ‚Üí Final Reminder ‚Üí Send to All (Not Sent)\n\n' +
    'TRACKING:\n' +
    '‚Ä¢ Confirmation emails tracked in "Confirmation Sent" column\n' +
    '‚Ä¢ Reminder emails tracked in "Reminder Sent" column\n' +
    '‚Ä¢ Each type can be sent independently\n\n' +
    'TIPS:\n' +
    '‚Ä¢ Always test with a single row first\n' +
    '‚Ä¢ Script will skip rows already marked as sent\n' +
    '‚Ä¢ Invalid emails will be marked as "Invalid Email"\n' +
    '‚Ä¢ Wait 1 second between bulk emails to avoid rate limits\n\n' +
    'Need help? Check the CONFIG section at the top of the script.';
  
  showAlert(message);
}