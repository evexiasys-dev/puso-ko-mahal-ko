/**
 * EMAIL SENDER FOR HEART MONTH SCREENING
 * Now includes both Registration Confirmation AND Final Reminder emails
 * 
 * SETUP STEPS:
 * 1. Open your Google Sheet
 * 2. Click Extensions ‚Üí Apps Script
 * 3. Replace ALL existing code with this code
 * 4. Click Save (üíæ icon)
 * 5. Close Apps Script tab
 * 6. Refresh your Google Sheet
 * 7. You'll see a new menu "üìß Send Emails" at the top
 */

// ============================================
// STEP 1: Configure your column numbers
// ============================================
// Open your Google Sheet and count which column each field is in
// Column A = 1, Column B = 2, Column C = 3, etc.

const CONFIG = {
  NAME_COLUMN: 2,      // Column B - Name
  EMAIL_COLUMN: 6,     // Column F - Email
  CONTACT_COLUMN: 8,   // Column H - Contact
  PACKAGE_COLUMN: 9,   // Column I - Package
  
  START_ROW: 2,        // Which row to start from? (2 = skip header row)
  
  // Email settings
  SENDER_NAME: 'Evexia Wellness Center'
};

// ============================================
// MAIN FUNCTION - Creates the menu
// ============================================
function onOpen() {
  SpreadsheetApp.getUi()
    .createMenu('üìß Send Emails')
    .addSubMenu(SpreadsheetApp.getUi().createMenu('‚úÖ Registration Confirmation')
      .addItem('‚úâÔ∏è Send to Selected Row', 'sendConfirmationToSelectedRow')
      .addItem('üìß Send to All (Not Sent)', 'sendConfirmationToAll'))
    .addSubMenu(SpreadsheetApp.getUi().createMenu('‚è∞ Final Reminder (1 Day Before)')
      .addItem('‚úâÔ∏è Send to Selected Row', 'sendReminderToSelectedRow')
      .addItem('üìß Send to All (Not Sent)', 'sendReminderToAll'))
    .addSeparator()
    .addItem('‚öôÔ∏è Instructions', 'showInstructions')
    .addToUi();
}

// ============================================
// CONFIRMATION EMAIL - Send to selected row
// ============================================
function sendConfirmationToSelectedRow() {
  sendEmailToRow('confirmation');
}

// ============================================
// CONFIRMATION EMAIL - Send to all
// ============================================
function sendConfirmationToAll() {
  sendEmailToAllRows('confirmation');
}

// ============================================
// REMINDER EMAIL - Send to selected row
// ============================================
function sendReminderToSelectedRow() {
  sendEmailToRow('reminder');
}

// ============================================
// REMINDER EMAIL - Send to all
// ============================================
function sendReminderToAll() {
  sendEmailToAllRows('reminder');
}

// ============================================
// Generic function to send email to selected row
// ============================================
function sendEmailToRow(emailType) {
  const sheet = SpreadsheetApp.getActiveSheet();
  const row = sheet.getActiveRange().getRow();
  
  if (row < CONFIG.START_ROW) {
    showAlert('Please select a participant row (not the header row)');
    return;
  }
  
  const data = sheet.getRange(row, 1, 1, sheet.getLastColumn()).getValues()[0];
  
  const participant = {
    name: data[CONFIG.NAME_COLUMN - 1],
    email: data[CONFIG.EMAIL_COLUMN - 1],
    contact: data[CONFIG.CONTACT_COLUMN - 1],
    package: data[CONFIG.PACKAGE_COLUMN - 1]
  };
  
  // Validate
  if (!participant.email) {
    showAlert('‚ùå No email found in this row!');
    return;
  }
  
  try {
    sendEmail(participant, emailType);
    const emailTypeName = emailType === 'confirmation' ? 'Confirmation' : 'Reminder';
    showAlert('‚úÖ ' + emailTypeName + ' email sent successfully to:\n' + participant.email);
    
    // Mark as sent in the appropriate column
    const columnOffset = emailType === 'confirmation' ? 1 : 2;
    const lastCol = sheet.getLastColumn() + columnOffset;
    const columnHeader = emailType === 'confirmation' ? 'Confirmation Sent' : 'Reminder Sent';
    
    // Add header if needed
    if (sheet.getRange(1, lastCol).getValue() === '') {
      sheet.getRange(1, lastCol).setValue(columnHeader);
    }
    
    sheet.getRange(row, lastCol).setValue(new Date().toLocaleString());
    
  } catch (error) {
    showAlert('‚ùå Error sending email:\n' + error.message);
  }
}

// ============================================
// Generic function to send emails to all rows
// ============================================
function sendEmailToAllRows(emailType) {
  const sheet = SpreadsheetApp.getActiveSheet();
  const lastRow = sheet.getLastRow();
  const lastCol = sheet.getLastColumn();
  
  // Determine which column to use for tracking
  const columnOffset = emailType === 'confirmation' ? 1 : 2;
  const trackingCol = lastCol + columnOffset;
  const columnHeader = emailType === 'confirmation' ? 'Confirmation Sent' : 'Reminder Sent';
  
  // Add header for tracking column if needed
  if (sheet.getRange(1, trackingCol).getValue() === '') {
    sheet.getRange(1, trackingCol).setValue(columnHeader);
  }
  
  let sent = 0;
  let skipped = 0;
  let errors = 0;
  
  for (let row = CONFIG.START_ROW; row <= lastRow; row++) {
    const data = sheet.getRange(row, 1, 1, trackingCol).getValues()[0];
    
    // Skip if already sent (check the tracking column)
    if (data[trackingCol - 1]) {
      skipped++;
      continue;
    }
    
    const participant = {
      name: data[CONFIG.NAME_COLUMN - 1],
      email: data[CONFIG.EMAIL_COLUMN - 1],
      contact: data[CONFIG.CONTACT_COLUMN - 1],
      package: data[CONFIG.PACKAGE_COLUMN - 1]
    };
    
    // Skip if data is still loading from IMPORTRANGE or empty
    if (!participant.name || participant.name === '#REF!' || participant.name === 'Loading...') {
      skipped++;
      continue;
    }
    
    if (!participant.email || !participant.email.includes('@')) {
      errors++;
      sheet.getRange(row, trackingCol).setValue('Invalid Email');
      continue;
    }
    
    try {
      sendEmail(participant, emailType);
      sheet.getRange(row, trackingCol).setValue(new Date().toLocaleString());
      sent++;
      
      // Wait 1 second between emails to avoid rate limits
      Utilities.sleep(1000);
      
    } catch (error) {
      errors++;
      sheet.getRange(row, trackingCol).setValue('Error: ' + error.message);
    }
  }
  
  const emailTypeName = emailType === 'confirmation' ? 'Confirmation' : 'Reminder';
  showAlert(
    emailTypeName + ' Campaign Complete!\n\n' +
    '‚úÖ Sent: ' + sent + '\n' +
    '‚è≠Ô∏è Skipped: ' + skipped + '\n' +
    '‚ùå Errors: ' + errors
  );
}

// ============================================
// The actual email sending function
// ============================================
function sendEmail(participant, emailType) {
  const htmlBody = emailType === 'confirmation' 
    ? createConfirmationEmailHTML(participant)
    : createReminderEmailHTML(participant);
  
  const subject = emailType === 'confirmation'
    ? '‚úì Registration Confirmed - Heart Month Health Screening'
    : '‚è∞ Tomorrow: Heart Month Health Screening - Final Reminders';
  
  MailApp.sendEmail({
    to: participant.email,
    subject: subject,
    htmlBody: htmlBody,
    name: CONFIG.SENDER_NAME
  });
}

